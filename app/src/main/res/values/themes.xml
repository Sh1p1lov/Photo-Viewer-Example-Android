<resources xmlns:tools="http://schemas.android.com/tools">
    <attr name="separatorLineBackgroundColor" format="color" />
    <!-- Base application theme. -->
    <style name="Theme.PhotoViewerExample" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?android:navigationBarColor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="separatorLineBackgroundColor">@color/black</item>
    </style>

    <style name="Widget.AppCompat.ImageButton.Folder">
        <item name="tint">@color/black</item>
    </style>
</resources>